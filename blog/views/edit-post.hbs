<div class="container-fluid bg-light bg-opactity-75 p-2">

    {{#if edit}}
        <h1 class="text-center">Edit Post</h1>
    {{else}}
        <h1 class="text-center">New Post</h1>
    {{/if}}
        
    <form method="GET">
        <div class="row">
        <div class="mb-3 col-1">
            <label for="post-key" class="form-label">Key</label>
            <input type="text"
                class="form-control"
                id="post-key"
                name="key"
                {{# if edit}}
                    disabled
                    value="{{post.key}}"
                {{/if}} >
        </div>

        <div class="mb-3 col-11">
            <label for="post-title" class="form-label">Title</label>
            <input type="text"
                class="form-control"
                id="post-title"
                name="title"
                value="{{post.title}}">
        </div>
        </div>

        <div class="mb-3">
            <label for="post-body" class="form-label">Body</label>
            <textarea class="form-control"
                id="post-body"
                rows="3"
                name="body">{{post.body}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary mb-3">
            {{#if edit}}
                Save
            {{else}}
                Create
            {{/if}}
        </button>
    </form>
</div>