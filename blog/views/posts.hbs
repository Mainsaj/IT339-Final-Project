<div class="container-fluid bg-light bg-opacity-75 p-2 b-dark">
  <h1 class="text-center">{{title}}</h1>
  <div class="row">
    <div class="col-11"></div>
    <div class="col-1">
      <a href="/new" class="btn btn-success">+ New Post</a>
    </div>
  </div>
  {{# each (reverseArray posts) }}
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 b-dark bg-light p-2 m-2">
      <h5 class="text-center">{{title}}</h5>
      <p>{{body}}</p>
      <a href="/edit/{{key}}" class="btn btn-primary">Edit</a>
      <a href="/delete/{{key}}" class="btn btn-danger">Delete</a>
    </div>
    <div class="col-1"></div>
  </div>
{{/each}}
</div>
</div>